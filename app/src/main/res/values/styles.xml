<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_bg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleBannerStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="DepGridTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ProductTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="DiscountTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OldProductPriceTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="ProductPriceTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CollapsedAppBarText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#777</item>
    </style>

    <style name="ExpandedAppBarText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#777</item>
    </style>

    <style name="TagButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textAllCaps">false</item>
    </style>






</resources>
