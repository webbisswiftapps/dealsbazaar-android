<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <apps.webbisswift.dealsbazaar.Utils.customview.CTextView
            android:id="@+id/productDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="20% off"
            android:background="@drawable/gradient_discount_tag"
            android:lines="1"
            android:textAppearance="@style/DiscountTextStyle"
            app:font="@string/font_quicksand"
            app:fstyle="0"
            />

        <ImageView
            android:id="@+id/storeLogo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            />


        <ImageView
            android:id="@+id/productImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_menu_gallery"
            />


        <apps.webbisswift.dealsbazaar.Utils.customview.CTextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Product Name that can extend good and god and extend and extend and extend"
            android:textAppearance="@style/ProductTitleTextStyle"
            app:font="@string/font_quicksand"
            app:fstyle="1"
            android:lineSpacingExtra="-2dp"
            android:maxLines="2"
            />

        <apps.webbisswift.dealsbazaar.Utils.customview.CTextView
            android:id="@+id/oldProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rs. 1200/-"
            android:textAppearance="@style/OldProductPriceTextStyle"
            app:font="@string/font_quicksand"
            app:fstyle="5"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:maxLines="2"
            />

        <apps.webbisswift.dealsbazaar.Utils.customview.CTextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rs. 1200/-"
            android:textAppearance="@style/ProductPriceTextStyle"
            app:font="@string/font_quicksand"
            app:fstyle="3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            />




    </LinearLayout>

</android.support.v7.widget.CardView>